            android:background="@android:color/transparent" />
    </GridLayout>
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_imageView"
        android:id="@+id/word_textView"
        android:layout_marginTop="-16.0dp"
        android:layout_marginBottom="8.0dp"
        android:layout_marginRight="16.0dp"
        android:layout_marginLeft="16.0dp"
        android:gravity="center"
        android:layout_above="@id/keyboard_gridLayout" />
</RelativeLayout>