<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/fail_0"
        android:layout_width="110.0dp"
        android:layout_height="180.0dp"
        android:id="@+id/state_imageView"
        android:layout_marginLeft="24.0dp"
        android:layout_marginTop="48.0dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/state_imageView"
        android:id="@+id/letter_textView"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16.0dp"
        android:layout_marginRight="16.0dp"
        android:textSize="24pt"
        android:textStyle="bold"
        android:layout_marginLeft="16.0dp"
        android:layout_alignTop="@id/state_imageView"
        android:layout_alignBottom="@id/state_imageView"
        android:layout_marginBottom="16.0dp"
        android:textAllCaps="true"
        android:autoSizeMinTextSize="8pt"
        android:autoSizeStepGranularity="1pt"
        android:autoText="true" />
    <GridLayout
        android:id="@+id/keyboard_gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:columnCount="7"
        android:rowCount="4"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:paddingBottom="16dp">
        <Button
            android:text="a"
            android:id="@+id/a_button"
            android:elevation="0dp"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent" />
